{
  "name": "@enbock/time-tracker",
  "version": "0.2.0-dev.9",
  "homepage": "https://enbock.github.io/Time-Tracker/",
  "description": "Experimental Project: Tracking start and end of working time.",
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^2.17.0",
    "@typescript-eslint/parser": "^2.17.0",
    "babel-cli": "^6.26.0",
    "babel-preset-react-app": "^9.1.0",
    "eslint": "^6.8.0",
    "eslint-plugin-react": "^7.18.0",
    "gh-pages": "^2.2.0",
    "jest": "^25.1.0",
    "react": "latest",
    "react-dom": "latest",
    "ts-jest": "^24.3.0",
    "typescript": "^3.7.5"
  },
  "devDependencies": {
    "@types/jest": "^24.9.0",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5"
  },
  "scripts": {
    "start": "powershell.exe -Command rm -r build; mkdir build ; cp -r -v public/* build/; npx tsc --build tsconfig.json -v --watch",
    "build": "mkdir build ; cp -rv public/* build/; npx tsc --build tsconfig.json -v && sh ./scripts/correctImports.sh",
    "devServer": "powershell.exe -Command cd build; npx http-server",
    "test": "echo TODO #jest --coverage --verbose",
    "deploy": "gh-pages -m 'auto commit [ci skip]' -d src"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/index.ts",
      "!src/setupTests.js"
    ],
    "setupFiles": [
      "react-app-polyfill/jsdom"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/setupTests.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/*test.js"
    ],
    "testEnvironment": "jsdom",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.(ts|tsx)?$": "ts-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.js$",
      "^.+\\.module\\.css$",
      "packages\\babel"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web",
      "^.+\\.module\\.css$": "identity-obj-proxy"
    },
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 95
      }
    },
    "preset": "ts-jest"
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
