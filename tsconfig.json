{
  "compilerOptions": {
    "outDir": "build",
    "module": "ESNext",
    "jsx": "react",
    "target": "ES2020",
    "strict": true,
    "moduleResolution": "Node",
    "baseUrl": "src",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES6",
      "ES2020"
    ],
    "rootDir": "src",
    "listEmittedFiles": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.*"
  ]
}